<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_08"
    style="@style/AppTheme.CardView">

    <LinearLayout
        android:id="@+id/business_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/size_24"
        android:paddingBottom="@dimen/size_12"
        android:paddingLeft="@dimen/size_24"
        android:paddingRight="@dimen/size_24"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_64"
            android:layout_marginBottom="@dimen/size_12"
            android:src="@drawable/img_no_logo"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="The Mark"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_hub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_04"
            android:layout_marginBottom="@dimen/size_04"
            android:singleLine="true"
            android:text="Bakersfield"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="987665"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

</android.support.v7.widget.CardView>